# HealthTech Frontend Environment Configuration
# Copy this file to frontend/apps/prm-dashboard/.env.local and update values

# =============================================================================
# API CONNECTION
# =============================================================================

# Backend API URL (without trailing slash)
NEXT_PUBLIC_API_URL=http://localhost:8007

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:8007

# API Version (optional)
# NEXT_PUBLIC_API_VERSION=v1

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Auth domain (for production with external auth)
# NEXT_PUBLIC_AUTH_DOMAIN=auth.healthtech.com

# JWT Secret (for server-side validation)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenAI API Key (for client-side AI features)
# Note: Only include if needed for client-side features
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# REAL-TIME COMMUNICATION (LiveKit)
# =============================================================================

# LiveKit Server URL (WebSocket)
NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit.livekit.cloud

# LiveKit API Credentials (server-side only)
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Conversation API (if separate service)
# NEXT_PUBLIC_CONVERSATION_API_URL=http://localhost:3001
# NEXT_PUBLIC_CONVERSATION_WS_URL=ws://localhost:3001

# WhatsApp Business API
# WHATSAPP_API_KEY=your-whatsapp-business-api-key

# SendGrid (for email features)
# SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# CLOUD STORAGE (AWS)
# =============================================================================

# AWS Credentials (for S3 uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=prm-dashboard-uploads

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry DSN (for error tracking)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry Environment
# SENTRY_ENVIRONMENT=development

# =============================================================================
# MULTI-TENANCY
# =============================================================================

# Default Organization ID
NEXT_PUBLIC_ORG_ID=default

# Default Tenant ID
NEXT_PUBLIC_TENANT_ID=default

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable voice features (requires LiveKit)
NEXT_PUBLIC_ENABLE_VOICE=true

# Enable AI assistant features
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true

# Enable telehealth features
NEXT_PUBLIC_ENABLE_TELEHEALTH=true

# Enable offline mode (PWA)
NEXT_PUBLIC_ENABLE_OFFLINE=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Name
NEXT_PUBLIC_APP_NAME=HealthTech PRM

# Application Version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# Log Format (json, pretty)
LOG_FORMAT=pretty

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable React DevTools
# NEXT_PUBLIC_REACT_DEVTOOLS=true

# Enable Debug Mode
# NEXT_PUBLIC_DEBUG=true

# Mock API (for frontend-only development)
# NEXT_PUBLIC_MOCK_API=false
