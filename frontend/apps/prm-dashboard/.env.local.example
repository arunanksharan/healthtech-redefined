# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# OpenAI Configuration (for AI Assistant)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Healthcare Conversation Platform
NEXT_PUBLIC_CONVERSATION_API_URL=http://localhost:3001
NEXT_PUBLIC_CONVERSATION_WS_URL=ws://localhost:3001

# LiveKit (for voice mode)
NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Organization
NEXT_PUBLIC_ORG_ID=default
