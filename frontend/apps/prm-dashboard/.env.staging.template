# Staging Environment Variables Template
# Copy this file to .env.staging and fill in actual values

# ============================================
# API Configuration
# ============================================
NEXT_PUBLIC_API_URL=https://api-staging.healthtech.com/api/v1
NEXT_PUBLIC_WS_URL=wss://api-staging.healthtech.com/ws

# ============================================
# AI Configuration
# ============================================
OPENAI_API_KEY=sk-staging-your-openai-api-key-here
NEXT_PUBLIC_ENABLE_AI=true

# ============================================
# Authentication
# ============================================
NEXT_PUBLIC_AUTH_DOMAIN=auth-staging.healthtech.com
JWT_SECRET=your-staging-jwt-secret-min-32-chars
JWT_EXPIRY=3600

# ============================================
# Communication Services
# ============================================
NEXT_PUBLIC_ENABLE_WHATSAPP=true
NEXT_PUBLIC_ENABLE_SMS=true
NEXT_PUBLIC_ENABLE_EMAIL=true

# Use test credentials for staging
WHATSAPP_API_KEY=test-whatsapp-api-key
TWILIO_ACCOUNT_SID=test-twilio-account-sid
TWILIO_AUTH_TOKEN=test-twilio-auth-token
SENDGRID_API_KEY=test-sendgrid-api-key

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://user:password@db-staging:5432/prm_staging
REDIS_URL=redis://:password@redis-staging:6379

# ============================================
# Monitoring
# ============================================
NEXT_PUBLIC_SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# ============================================
# Feature Flags (enable all for testing)
# ============================================
NEXT_PUBLIC_ENABLE_JOURNEYS=true
NEXT_PUBLIC_ENABLE_TICKETS=true
NEXT_PUBLIC_ENABLE_COMMUNICATIONS=true
NEXT_PUBLIC_ENABLE_AI_SUGGESTIONS=true
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS=true
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=true

# ============================================
# Security
# ============================================
ENCRYPTION_KEY=your-32-char-encryption-key-staging
SESSION_SECRET=your-session-secret-staging
CSRF_SECRET=your-csrf-secret-staging

# ============================================
# Logging (more verbose for staging)
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
ENABLE_REQUEST_LOGGING=true

# ============================================
# Deployment
# ============================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# ============================================
# Compliance
# ============================================
HIPAA_MODE=true
AUDIT_LOG_RETENTION_DAYS=365
PHI_ENCRYPTION_ENABLED=true
