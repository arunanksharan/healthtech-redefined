{
  "dashboard": {
    "id": null,
    "uid": "event-driven-arch",
    "title": "Event-Driven Architecture Metrics",
    "tags": ["kafka", "events", "microservices"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Event Publishing Rate",
        "targets": [
          {
            "expr": "rate(event_published_total[5m])",
            "legendFormat": "{{service}} - {{event_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Events/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Event Publishing Latency (p99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(event_publish_duration_seconds_bucket[5m]))",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ms",
            "label": "Latency"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "Consumer Lag",
        "targets": [
          {
            "expr": "sum(consumer_lag_messages) by (consumer_group)",
            "legendFormat": "{{consumer_group}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Messages"
          },
          {
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [1000],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "handler": 1,
          "name": "High Consumer Lag",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(event_publish_errors_total[5m]) / rate(event_published_total[5m]) * 100",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Error %"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "Dead Letter Queue Size",
        "targets": [
          {
            "expr": "dlq_messages_total",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Messages"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "singlestat",
        "title": "Circuit Breaker Status",
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "valueMaps": [
          {"value": "0", "text": "CLOSED"},
          {"value": "1", "text": "OPEN"},
          {"value": "2", "text": "HALF_OPEN"}
        ],
        "colors": ["#299c46", "#e24d42", "#ef843c"],
        "thresholds": "1,2"
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "type": "table",
        "title": "Top Events by Type",
        "targets": [
          {
            "expr": "topk(10, sum(rate(event_published_total[5m])) by (event_type))",
            "format": "table",
            "refId": "A"
          }
        ],
        "styles": [
          {
            "pattern": "Time",
            "type": "hidden"
          },
          {
            "pattern": "event_type",
            "type": "string",
            "alias": "Event Type"
          },
          {
            "pattern": "Value",
            "type": "number",
            "unit": "ops",
            "alias": "Rate"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "type": "graph",
        "title": "Kafka Broker CPU Usage",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=~\"kafka-broker.*\"}[5m]) * 100",
            "legendFormat": "Broker {{broker_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU %"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "type": "graph",
        "title": "Kafka Topic Message Rate",
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messagesin_total[5m])",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Messages/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "type": "graph",
        "title": "Workflow Execution Rate",
        "targets": [
          {
            "expr": "rate(workflow_started_total[5m])",
            "legendFormat": "{{workflow_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Workflows/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "type": "graph",
        "title": "Workflow Completion Status",
        "targets": [
          {
            "expr": "sum(rate(workflow_completed_total[5m])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Workflows/sec"
          },
          {
            "format": "short"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
